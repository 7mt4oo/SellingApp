<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.selling.hussienalrubaye.androidselling.ControlPanel">

    <LinearLayout
        android:background="@color/whitebackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:divider="@color/whitebackground"

            android:background="@color/whitebackground"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/listView"
            android:dividerHeight="9dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@color/whiteback"
            android:layout_weight="0"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">



            <Button
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="@string/mytool"
                android:id="@+id/bulogotype"
                android:drawableRight="@drawable/add"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:onClick="buAddTool"
                android:textSize="12dp"
                android:textColor="@color/darkblue"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:background="@color/whiteback" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="@string/home"
                android:id="@+id/buhome"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/home"
                android:layout_weight="1"
                android:onClick="bunews"
                android:textSize="12dp"
                android:textColor="@color/darkblue"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:background="@color/whiteback" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
